rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
             && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
    
    // User uploads (wine label photos)
    match /users/{userId}/photos/{photoId} {
      // Read: only owner
      allow read: if isOwner(userId);
      
      // Create: only owner, must be valid image
      allow create: if isOwner(userId) && isValidImage();
      
      // Update: not allowed (immutable)
      allow update: if false;
      
      // Delete: only owner
      allow delete: if isOwner(userId);
    }
    
    // Thumbnails (generated by Cloud Functions)
    match /users/{userId}/thumbnails/{thumbId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Shared assets (e.g., wine type icons) - read-only
    match /assets/{assetPath=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
